CC = gcc
CFLAGS = -Wall -Wextra -Werror
LINK = -lncurses -lpthread

TARGET = resources_collector
SRCS = 00_resources_collector.c common.c cpu_info_to_log.c mem_info_to_log.c
OBJS = $(SRCS:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^ $(LINK)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)
